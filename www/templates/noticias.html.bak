<ion-view view-title="Search">
  <ion-content>
    <h1>Noticias</h1>
    <ion-list>
      <ion-item class="item-remove-animate item-avatar item-icon-right" ng-repeat="playlist in playlists" type="item-text-wrap" href="#/tab/articulo/{{playlist.id}}">
        <h2>{{playlist.data.title}}</h2>
        
        <i class="icon ion-chevron-right icon-accessory"></i>

        <ion-option-button class="button-assertive" ng-click="remove(articulo)">
          Delete
        </ion-option-button>
      </ion-item>
    </ion-list> 
    
  </ion-content>
</ion-view>
